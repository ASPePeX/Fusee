<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <AssemblyName>fusee</AssemblyName>
    <RootNamespace>Fusee.PointCloud.OoCFileGenerator</RootNamespace>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>fusee</ToolCommandName>
    <PackageTags>dotnet;tools;fusee</PackageTags>
  </PropertyGroup>
  <PropertyGroup>
    <OutputPath>$(BaseOutputPath)\PointCloud\Fusee.PointCloud.OoCFileGenerator</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(FuseeEngineRoot)\src\PointCloud\PointAccessorCollection\Fusee.PointCloud.PointAccessorCollections.csproj">
      <PrivateAssets>analyzers</PrivateAssets>
    </ProjectReference>  
  </ItemGroup>

</Project>
