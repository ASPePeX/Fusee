<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Fusee.Pointcloud.Reader.LASReader</RootNamespace>
    <PackageId>Fusee.Pointcloud.Reader.LASReader</PackageId>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>$(BaseOutputPath)\Libraries</OutputPath>
    <DocumentationFile>$(OutputPath)\$(RootNamespace).xml</DocumentationFile>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectReference Include="$(FuseeEngineRoot)\src\Math\Core\Fusee.Math.Core.csproj">
      <PrivateAssets>analyzers</PrivateAssets>
    </ProjectReference>
    <ProjectReference Include="$(FuseeEngineRoot)\src\Pointcloud\Common\Fusee.Pointcloud.Common.csproj">
      <PrivateAssets>analyzers</PrivateAssets>
    </ProjectReference>
  </ItemGroup>
  
  <ItemGroup>
    <!--<None Include="$(FuseeEngineRoot)\ext\LASlib\$(Configuration)\libLASlib.dll" Link="Natives\libLASlib.dll" />
    <None Include="$(FuseeEngineRoot)\ext\LASlib\$(Configuration)\libLASlib.so" Link="Natives\libLASlib.so" />-->

    <!-- Release version is usually faster -->
    <Content Include="$(FuseeEngineRoot)\ext\LASlib\Release\libLASlib.dll" Link="Natives\libLASlib.dll" PackagePath="runtimes/win/native" />
    <Content Include="$(FuseeEngineRoot)\ext\LASlib\Release\libLASlib.so" Link="Natives\libLASlib.so" PackagePath="runtimes/linux/native" />
  </ItemGroup>
</Project>
