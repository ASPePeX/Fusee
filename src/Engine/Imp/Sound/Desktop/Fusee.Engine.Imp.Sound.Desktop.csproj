<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <FuseeBuildRoot Condition=" '$(FuseeBuildRoot)' == '' ">..\..\..\..\..</FuseeBuildRoot>
    <RootNamespace>Fusee.Engine.Imp.Network.Desktop</RootNamespace>
    <TargetFramework>net462</TargetFramework>
    <OutputPath>$(FuseeBuildRoot)\bin\$(Configuration)\Libraries\</OutputPath>
    <BaseIntermediateOutputPath>$(FuseeBuildRoot)\tmp\Obj\$(Configuration)\$(RootNamespace)\</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)\</IntermediateOutputPath>
    <DocumentationFile>$(FuseeBuildRoot)\bin\$(Configuration)\Libraries\$(RootNamespace).xml</DocumentationFile>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

    <PackageId>Fusee.Engine.Imp.Network.Desktop</PackageId>
    <Authors>FuseeProjectTeam</Authors>
    <Company>Furtwangen University</Company>
    <Version>0.6.1.0</Version>
    <AssemblyVersion>0.6.1.0</AssemblyVersion>
    <FileVersion>0.6.1.0</FileVersion>
    <Product>FUSEE</Product>
    <Copyright>Copyright © 2013-2018 The FUSEE Project Team</Copyright>
  </PropertyGroup>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />
  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />
  <Import Project="$(FuseeBuildRoot)\src\FuseeBuildActions.target.xml" />
  
  <ItemGroup>
    <Reference Include="sfmlnet-audio-2">
      <HintPath>$(FuseeBuildRoot)\ext\SFML\sfmlnet-audio-2.dll</HintPath>
    </Reference>
    <Reference Include="sfmlnet-system-2">
      <HintPath>$(FuseeBuildRoot)\ext\SFML\sfmlnet-system-2.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(FuseeBuildRoot)\src\Engine\Common\Fusee.Engine.Common.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="$(FuseeBuildRoot)\ext\SFML\Windows\csfml-audio-2.dll" Link="csfml-audio-2.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="$(FuseeBuildRoot)\ext\SFML\Windows\csfml-system-2.dll" Link="csfml-system-2.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="$(FuseeBuildRoot)\ext\SFML\Windows\csfml-window-2.dll" Link="csfml-window-2.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="$(FuseeBuildRoot)\ext\SFML\Windows\libsndfile-1.dll" Link="libsndfile-1.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="$(FuseeBuildRoot)\ext\SFML\Windows\openal32.dll" Link="openal32.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="$(FuseeBuildRoot)\ext\SFML\Windows\sfml-audio-2.dll" Link="sfml-audio-2.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="$(FuseeBuildRoot)\ext\SFML\Windows\sfml-system-2.dll" Link="sfml-system-2.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>