<Window x:Class="Fusee.Examples.PcRendering.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Fusee.Examples.PcRendering.WPF"
        xmlns:sew="clr-namespace:Fusee.Pointcloud.Common;assembly=Fusee.Pointcloud.Common"
        mc:Ignorable="d"
        Title="Fusee Point Cloud Rendering" Height="650" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="43*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.3*" />

        </Grid.RowDefinitions>
        <Border BorderBrush="Black" Grid.Row="1" Grid.ColumnSpan="2" Margin="2,0,2,0" Grid.RowSpan="4" BorderThickness="1"/>
        <Border BorderBrush="Black" Grid.Row="6" Grid.ColumnSpan="2" Margin="2,0,2,0" Grid.RowSpan="1" BorderThickness="1"/>
        <Border BorderBrush="Black" Grid.Row="8" Grid.ColumnSpan="2" Margin="2,0,2,0" Grid.RowSpan="2" BorderThickness="1"/>
        <Border BorderBrush="Black" Grid.Row="11" Grid.ColumnSpan="2" Margin="2,0,2,0" Grid.RowSpan="2" BorderThickness="1"/>

        <Label Content="Lighting" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="1" x:Name="LightingLabel"/>
        <ComboBox Height="22" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" MaxWidth="144" Width="144" x:Name="Lighting" ItemsSource="{Binding Source={local:EnumBindingSource {x:Type sew:Lighting}}}" SelectionChanged="Lighting_SelectionChanged" IsEnabled="true" Grid.Row="1"/>

        <Label Content="Point shape" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="6" x:Name="PtShapeLabel" />
        <ComboBox Height="22" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="6" MaxWidth="144" Width="144" x:Name="PtShape" ItemsSource="{Binding Source={local:EnumBindingSource {x:Type sew:PointShape}}}" SelectionChanged="PtShape_SelectionChanged" IsEnabled="true"/>

        <Label Content="Point size mode" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="8" x:Name="PtSizeModeLabel" />
        <ComboBox Height="22" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="8" MaxWidth="144" Width="144" x:Name="PtSizeMode" ItemsSource="{Binding Source={local:EnumBindingSource {x:Type sew:PointSizeMode}}}" SelectionChanged="PtSizeMode_SelectionChanged" IsEnabled="true"/>

        <Label Content="Color mode" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="11" x:Name="ColorModeLabel" />
        <ComboBox Height="22" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="11" MaxWidth="144" Width="144" x:Name="ColorMode" ItemsSource="{Binding Source={local:EnumBindingSource {x:Type sew:ColorMode}}}" SelectionChanged="ColorMode_SelectionChanged" IsEnabled="true"/>

        <Label Content="Point size" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="9" x:Name="PtSizeLabel" />
        <Slider VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="9" Width="144" Maximum ="50.0" Minimum ="1.0" IsSnapToTickEnabled="True" ValueChanged="PtSize_ValueChanged" x:Name="PtSize"/>
        <Label Content="10" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.Row="9" x:Name="PtSizeVal" />

        <Label Content="SSAO strength" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="4" x:Name="SSAOStrengthLabel" />
        <Slider HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="4" VerticalAlignment="Top" Width="144" x:Name="SSAOStrength" Maximum ="1.0" Minimum ="0.0" AutoToolTipPlacement="TopLeft"
        AutoToolTipPrecision="2" ValueChanged="SSAOStrength_ValueChanged"/>
        <CheckBox Content="SSAO" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Click="SSAOCheckBox_Checked" x:Name="SSAOCheckbox" Height="15" Width="49"/>

        <Label Content="EDL Neighbor Px" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="3" x:Name="EDLNeighbourPxLabel" Grid.RowSpan="2" />
        <Slider HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="3" VerticalAlignment="Top" Width="144" x:Name="EDLNeighbourPx" Maximum ="10" Minimum ="1" IsSnapToTickEnabled="True"
    TickFrequency="1" ValueChanged="EDLNeighbourPxSlider_ValueChanged" />
        <Label Content="10" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" x:Name="EDLNeighbourPxVal" />

        <Label Content="EDL strength" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="2" x:Name="EDLStrengthLabel" />
        <Slider HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Row="2" VerticalAlignment="Top" Width="144" x:Name="EDLStrength" Maximum ="1.0" Minimum ="0.0" ValueChanged="EDLStrengthSlider_ValueChanged"/>
        <Label Content="10" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" x:Name="EDLStrengthVal" />

        <Label Content="Single color" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="148" Height="27" Grid.Row="12" x:Name="SingleColorLabel" Grid.RowSpan="2" />
        <xctk:ColorPicker Name="SingleColor" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Grid.Row="12" Width="100" SelectedColorChanged="SingleColor_SelectedColorChanged"/>
        
        
        







    </Grid>
</Window>
