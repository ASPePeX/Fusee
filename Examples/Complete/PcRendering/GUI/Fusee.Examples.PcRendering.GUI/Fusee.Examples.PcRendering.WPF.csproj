<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <RootNamespace>Fusee.Examples.PcRendering.WPF</RootNamespace>
    <PackageId>Fusee.Examples.PcRendering.WPF</PackageId>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <OutputType>Exe</OutputType>
    <DefineConstants>PLATFORM_DESKTOP</DefineConstants>
    <ApplicationIcon>FuseeLogo.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>$(BaseOutputPath)\Examples\PcRendering\GUI\WPF</OutputPath>
    <StartupObject>Fusee.Examples.PcRendering.WPF.App</StartupObject>
    <ApplicationIcon>FuseeLogo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\camera.png" />
    <None Remove="Assets\color.png" />
    <None Remove="Assets\color_w.png" />
    <None Remove="Assets\folder.png" />
    <None Remove="Assets\lighting.png" />
    <None Remove="Assets\lighting_w.png" />
    <None Remove="Assets\octants.png" />
    <None Remove="Assets\octants_inactive.png" />
    <None Remove="Assets\octants_on.png" />
    <None Remove="Assets\ptMode.png" />
    <None Remove="Assets\ptMode_w.png" />
    <None Remove="Assets\size.png" />
    <None Remove="Assets\size_w.png" />
    <None Remove="Assets\vis_w.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Extended.Wpf.Toolkit" Version="3.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="OpenTK" Version="2.0.0" />
    <PackageReference Include="OpenTK.GLControl" Version="1.1.2349.61993" />
    <PackageReference Include="SharpFontStandard" Version="4.0.1" />
    <PackageReference Include="System.Drawing.Common" Version="4.6.0" />
    <PackageReference Include="protobuf-net" Version="3.0.0-alpha.146.g00620fbe1a" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Fusee.Examples.PcRendering.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Fusee.Pointcloud.PointAccessorCollections">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Pointcloud.PointAccessorCollections.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Pointcloud.OoCFileReaderWriter">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Pointcloud.OoCFileReaderWriter.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Pointcloud.Common">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Pointcloud.Common.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Base.Common">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Base.Common.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Base.Core">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Base.Core.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Base.Imp.Desktop">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Base.Imp.Desktop.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Serialization">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Serialization.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Engine.Common">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Engine.Common.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Engine.Core">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Engine.Core.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Math.Core">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Math.Core.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Engine.Imp.Graphics.Desktop">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Engine.Imp.Graphics.Desktop.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Xene">
      <HintPath>$(FuseeEngineRoot)\bin\$(Configuration)\Libraries\Fusee.Xene.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\camera.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\color.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\color_w.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\folder.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\lighting.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\lighting_w.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\octants.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\octants_inactive.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\octants_on.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\ptMode.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\ptMode_w.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\size.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\size_w.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\vis_w.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup> 
  
</Project>