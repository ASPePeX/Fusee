<Project Sdk="Mono.WebAssembly.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoWarn>NU1701;NU1604;NU1605</NoWarn>
    <MonoWasmLinkMode>None</MonoWasmLinkMode>
    <StartupObject />
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>$(BaseOutputPath)\Examples\PcRendering\WebAsm\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Fusee.SerializationSerializer">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.SerializationSerializer.dll</HintPath>
    </Reference>
    <Reference Include="protobuf-net">
      <HintPath>$(FuseeRoot)ext\protobuf\$(Configuration)\protobuf-net.dll</HintPath>
    </Reference>
    <Reference Include="SkiaSharp.Wasm">
      <HintPath>..\..\..\..\..\ext\Uno.SkiaSharp\SkiaSharp.Wasm.dll</HintPath>
    </Reference>
    <ProjectReference Include="$(FuseeRoot)src\Base\Common\Fusee.Base.Common.csproj" />
    <ProjectReference Include="$(FuseeRoot)src\Base\Core\Fusee.Base.Core.csproj" />
    <ProjectReference Include="$(FuseeRoot)src\Engine\Common\Fusee.Engine.Common.csproj" />
    <ProjectReference Include="$(FuseeRoot)src\Engine\Core\Fusee.Engine.Core.csproj" />
    <ProjectReference Include="$(FuseeRoot)src\Engine\Imp\Graphics\WebAsm\Fusee.Engine.Imp.Graphics.WebAsm.csproj" />
    <ProjectReference Include="$(FuseeRoot)src\Math\Core\Fusee.Math.Core.csproj" />
    
    <ProjectReference Include="$(FuseeRoot)\src\Base\Imp\WebAsm\Fusee.Base.Imp.WebAsm.csproj" />
    
    <ProjectReference Include="..\Core\Fusee.Examples.PcRendering.Core.csproj" />

    
  </ItemGroup>

  <ItemGroup>
    <None Include="$(FuseeRoot)\ext\Uno.SkiaSharp\SkiaSharp.Wasm.dll" Link="Natives\SkiaSharp.Wasm.dll" />
  </ItemGroup>


  <ItemGroup>
   
    <PackageReference Include="System.Drawing.Common" Version="4.5.1" />
   
    <PackageReference Include="System.Memory" Version="4.5.3" />

    <PackageReference Include="WebAssembly.Bindings" Version="0.1.0-preview1" />
    <PackageReference Include="WebAssembly.Net.Http" Version="0.1.0-preview1" />
    <PackageReference Include="WebAssembly.Net.WebSockets" Version="0.1.0-preview1" />
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="Assets\FuseeAnim.gif" />
    <None Remove="Assets\FuseeSpinning.gif" />
    <None Remove="canvaskit.js" />
    <None Remove="index.html" />
    <None Remove="Scripts\mono_support.js" />
    <None Remove="Scripts\SkiaSharp.js" />

    <None Remove="canvaskit.wasm" />

    <Content Include="Assets\FuseeAnim.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <Content Include="Assets\FuseeSpinning.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="canvaskit.wasm">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>

    <!-- TODO move into Content for best practice -->
  </ItemGroup>

  <ItemGroup>
    <None Remove="server.py" />
    <_WasmItem Remove="Assets\Styles\browser.css" />
    <_WasmItem Remove="Scripts\loading.js" />
    <Content Include="server.py">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Update="Scripts\mono_support.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="Scripts\SkiaSharp.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\Styles\browser.css">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
