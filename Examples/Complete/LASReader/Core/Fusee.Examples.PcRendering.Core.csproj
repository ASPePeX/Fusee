<Project>
  <PropertyGroup>
    <RootNamespace>Fusee.Examples.PcRendering.Core</RootNamespace>
    <PackageId>Fusee.Examples.PcRendering.Core</PackageId>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />

  <PropertyGroup>
    <OutputPath>$(BaseOutputPath)\Examples\PcRendering\Core\</OutputPath>
    <ApplicationIcon />
    <OutputType>Library</OutputType>
    <StartupObject />
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\PointCloud.frag" />
    <None Remove="Assets\PointCloud.vert" />
    <None Remove="Assets\PointDepth.frag" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\PointCloud.frag">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\PointCloud.vert">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\PointDepth.frag">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>  

  <ItemGroup>
    <Reference Include="Fusee.Base.Common">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Base.Common.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Base.Core">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Base.Core.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Engine.Common">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Engine.Common.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Engine.Core">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Engine.Core.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Engine.GUI">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Engine.GUI.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Math.Core">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Math.Core.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Serialization">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Serialization.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Xene">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Xene.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Pointcloud.Common">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Pointcloud.Common.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Pointcloud.LASReader">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Pointcloud.LASReader.dll</HintPath>
    </Reference>
    <Reference Include="Fusee.Pointcloud.OocFileGen">
      <HintPath>$(FuseeRoot)\bin\$(Configuration)\Libraries\Fusee.Pointcloud.OocFileGen.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />
</Project>
