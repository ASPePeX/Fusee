    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "dependsOn": ["build"],
            "label": "Publish FUSEE Desktop app",
            "command": "fusee publish --platform Desktop",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "dependsOn": ["build"],
            "label": "Publish FUSEE Web app",
            "command": "fusee publish --platform Web",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }        
    ]
}